<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs | Post</title>
    <link rel="stylesheet" href="stylesheets/post.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
</head>
<body>
    <div id="navbar">
        <a href="/"><button id="cancel" class="post-button">Cancel</button></a>
    </div>
    <form action="/post" method="POST" enctype="multipart/form-data">

        <!-- Form to submit blog post -->
        <label for="title">Title</label><br>
        <div class="input-container">
            <input id="title" type="text" name="title" placeholder="Write your title here"><br>
        </div>
    
        <label for="thumbnail">Thumbnail</label><br>
        <input type="file" name="thumbnail" id="thumbnail"><br>
        <label for="content">Content</label><br><br>
        <textarea id="markdown-editor" name="content"></textarea>
        <div id="post-button-div">
            <button type="submit" id="post-button">Post</button>
        </div>
    </form>
    
    <script>
        var simplemde = new SimpleMDE({
            element: document.getElementById("markdown-editor"),
            toolbar: ["bold", "italic", "heading", "|", "preview", "side-by-side", "fullscreen", "image", "guide", "table"],
            status: false, // Disable the status bar
            spellChecker: false // Disable spell checker
        });
    </script>
</body>
</html>
